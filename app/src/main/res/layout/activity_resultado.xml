        app:layout_constraintStart_toStartOf="@+id/viewResultado"
        app:layout_constraintTop_toTopOf="@+id/viewResultado"
        android:text="@string/bienvenido_a_la_aplicacion"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="19sp"/>


    <TextView
        android:id="@+id/TVresultado"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewResultado"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
